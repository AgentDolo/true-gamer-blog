---
title: Home
layout: 'base.njk'

---


    
      
<section class="hero">
  <div class="container flow">
      <div class="hero__content flow">
        <h1 class="section-title">UP YOUR GAME WITH <span class="purple-text">PRO </span>INSIGHTS.</h1>
          <p>SELECT A GAME TO BEGIN</p>
        
        
      </div>
      
  </div>
</section>

<section id="landing-content" class="landing-content">
  <div class="container flow">
    <div class="headline">
      <h2>ALL Games</h2>
      <div class="sort-filter">
        <label for="popularity-filter">Sort by:</label>
        <select id="sort-filter">
          <option value="popularity">Popularity</option>
          <option value="name">Name</option>
          <!-- Add more sorting options if needed -->
        </select>
      </div>
    </div>

    <div class="games-list" id="games-list">
  <!-- Game items will be dynamically added here using JavaScript -->
  <!-- Assuming you are using a loop to render gamesData -->
  {% for game in gamesData %}
    <div class="game">
      <a href="{{ game.link }}"> <!-- Add the dynamic hyperlink here -->
        <div class="game-image">
          <img src="{{ game.imageUrl }}" alt="{{ game.name }}">
        </div>
      </a>
      <div class="game-info">
        <h3>{{ game.name }}</h3>
        <p>{{ game.description }}</p>
      </div>
    </div>
  {% endfor %}
</div>


</section>

</section>

<section id="featured-articles" class="featured-articles">
  <div class="container flow">
    <h2 class="section-title text-left">NEWS</h2>
    

    <div class="swiper-container">
      <div class="swiper-wrapper">

        {%- for post in collections.featured | reverse -%}
          <div class="swiper-slide">
            {% include 'article-snippet.njk' %}
          </div>
        {%- endfor %}

      </div>
      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>
      <!-- Add Navigation -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</section>




    


